@startuml
  package ui {
    class Consola {
      + main(args[] String)
      + registrarUsuario()
      + registrarContacto()
      + login(usuario : String, password : String)
      + verListaContactos()
      + verDetallesContactos()
      + CompartirContacto()
      + verSolicitudes()
      + AceptarSolicitud()
      + RechazarSolicitud()
    }

  }

  package contactos {
    class Usuario {
      - nombre : String
      - usuario : String
      - password : String
      - eMail : String
      - contactos : Contacto[]
      - solicidutes : Solictud[]

      + logIn(usuario : String, password : String)
      + agregarContacto(contacto : Contacto) : boolean
      + verListaContactos()
      + agregarSolicitud(solicitud : SolicitudImporte)
      + verSolicitudes() : String
    }

    class Contacto {
      - nombre : String
      - telefono : String
      - eMail : String
      - url : String

      + registrar()
      + verDetalles() : String
    }

    class SolicitudImporte {
      - solicitante : Usuario
      + crear()
      + aceptar()
      + declinar()
    }

    Usuario  -->  Contacto
    Usuario  -->  SolicitudImporte
    Usuario "1" *-- "*" Contacto
    Usuario "1" *-- "*" SolicitudImporte
  }

  package persistencia {

    class AlmacenUsuarios {
      - usuarios : Usuario[]

      + guardarUsuario(usuario : Usuario)
      + cargarUsuarios() : Usuario[]
    }

    class Cifrador {
      + cifrar(password : String, dato : String) : String
      + decifrar(password : String, dato_cifrado : String) : String
      + hashear(password : String) : String
    }

    AlmacenUsuarios --> Cifrador
}

    Consola --> Usuario
    Usuario --> Cifrador
    Usuario --> AlmacenUsuarios
@enduml
